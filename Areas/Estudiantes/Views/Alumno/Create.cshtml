@model LICEORURALJASMINEZB.Models.Alumno

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<div class="container">
    <form method="post" asp-action="Create">
        <div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-2">
                    <label>Nombres</label>
                </div>
                <div class="col-5">
                    <input asp-for="Nombres" class="form-control" />
                </div>
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Apellidos" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Apellidos" class="form-control" />
                </div>
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label class="text-center font-weight-bold" style="color:black">Cedula</label>
                </div>
                <div class="col-5">
                    <input asp-for="DocumentoIdentidad" class="form-control" />
                </div>
                <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label class="text-center font-weight-bold" style="color:black" >Fecha Nacimiento</label>
                    
                </div>
                <div class="col-5">
                    <input type="date" asp-for="FechaNacimiento" class="form-control" />

                </div>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Sexo" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="Sexo" asp-items="Html.GetEnumSelectList<Alumno.IsSexo>()"
                            class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Ciudad" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Ciudad" class="form-control" />
                </div>
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Direccion" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Direccion" class="form-control" />
                </div>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Correo" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Correo" class="form-control" />
                </div>
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Telefono" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Telefono" class="form-control" />
                </div>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Estado" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="Estado" asp-items="Html.GetEnumSelectList<Alumno.IsEstado>()"
                            class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="FechaRegistro" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input type="date" asp-for="FechaRegistro" class="form-control" />

                </div>
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_CreateAndBackToListButton" />
                </div>
            </div>

        </div>
    </form>
</div>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
