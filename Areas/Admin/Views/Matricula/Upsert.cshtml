@model LICEORURALJASMINEZB.Models.ViewModels.MatriculaViewModels
@{
Layout = "~/Views/Shared/_Layout.cshtml";
var titulo = "Crear Matricula";
}
<div class="container">
   <div class="row mt-4">
      <div class="col-sm-12">
         <form method="post" enctype="multipart/form-data">
            <div class="row p-3 border-0">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
            @if (Model.Matricula.Id != 0)
            {
            // Actualizar
            titulo = "Actualizar Matricula";
            <input type="hidden" asp-for="Matricula.Id" />
            }
            <div class="col-12 border-bottom">
               <h2 class="text-primary">@titulo</h2>
            </div>

                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Instituto de Procedencia</label>
                            <input asp-for="Matricula.InstitucionProcedencia" class="form-control" />
                            <span asp-validation-for="Matricula.InstitucionProcedencia" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="cboesrepitente">Es Repitente</label>
                            <select  class="form-control">
                                <option value="NO">NO</option>
                                <option value="SI">SI</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label  >Periodo</label>
                            @Html.DropDownListFor(c => c.Matricula.IdPeriodo, Model.PeriodoLista, "Seleccione",
                            new { @class = "form-control" })
                            <span asp-validation-for="Matricula.IdPeriodo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label >Nivel</label>
                            @Html.DropDownListFor(c => c.Matricula.IdCurso, Model.CursoLista, "Seleccione",
                            new { @class = "form-control" })
                            <span asp-validation-for="Matricula.IdCurso" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Periodo</label>
                            @Html.DropDownListFor(c => c.Matricula.IdAlumno, Model.AlumnoLista, "Seleccione",
                     new { @class = "form-control" })
                     <span asp-validation-for="Matricula.IdAlumno" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label>Nivel</label>
                            @Html.DropDownListFor(c => c.Matricula.IdGradoSeccion, Model.NivelLista, "Seleccione",
                            new { @class = "form-control" })
                            <span asp-validation-for="Matricula.IdGradoSeccion" class="text-danger"></span>
                        </div>
                    </div>
                </div>

      




               <div class="form-group row">
                  <div class="col-4">
                     Marca
                  </div>
                  <div class="col-8">
                     @Html.DropDownListFor(c => c.Matricula.IdEncargado, Model.EncargadoLista, "Seleccione",
                     new { @class = "form-control" })
                     <span asp-validation-for="Matricula.IdEncargado" class="text-danger"></span>
                  </div>
               </div>
               <div class="form-group row">
                  <div class="col-4">
                     <label asp-for="Matricula.InstitucionProcedencia"></label>
                  </div>
                  <div class="col-8">
                     <input asp-for="Matricula.InstitucionProcedencia" class="form-control" />
                     <span asp-validation-for="Matricula.InstitucionProcedencia" class="text-danger"></span>
                  </div>
               </div>
               <div class="form-group row">
                  <div class="col-4">
                     <label asp-for="Matricula.TieneExpediente"></label>
                  </div>
                  <div class="col-8">
                     <input asp-for="Matricula.TieneExpediente" class="form-control" />
                     <span asp-validation-for="Matricula.TieneExpediente" class="text-danger"></span>
                  </div>
               </div>
               <div class="form-group row">
                  <div class="col-4">
                     <label asp-for="Matricula.Repitente"></label>
                  </div>
                  <div class="col-8">
                     <input asp-for="Matricula.Repitente" class="form-control" />
                     <span asp-validation-for="Matricula.Repitente" class="text-danger"></span>
                  </div>
               </div>
               <div class="form-group row">
                  <div class="col-4">
                     <label asp-for="Matricula.Adecucion"></label>
                  </div>
                  <div class="col-8">
                     <input asp-for="Matricula.Adecucion" class="form-control" />
                     <span asp-validation-for="Matricula.Adecucion" class="text-danger"></span>
                  </div>
               </div>
               <div class="form-group row">
                  <div class="col-4">
                     <label asp-for="Matricula.PadeceAlgunaEnfermedad"></label>
                  </div>
                  <div class="col-8">
                     <input asp-for="Matricula.PadeceAlgunaEnfermedad" class="form-control" />
                     <span asp-validation-for="Matricula.PadeceAlgunaEnfermedad" class="text-danger"></span>
                  </div>
               </div>
               <div class="form-group row">
                  <div class="col-4">
                     <label asp-for="Matricula.ConsumeTratamientos"></label>
                  </div>
                  <div class="col-8">
                     <input asp-for="Matricula.ConsumeTratamientos" class="form-control" />
                     <span asp-validation-for="Matricula.ConsumeTratamientos" class="text-danger"></span>
                  </div>
               </div>
               <div class="form-group row">
                  <div class="col-8 offset-4">
                     @if (Model.Matricula.Id != 0)
                     {
                     <partial name="_BotonesActualizarYRegresar" model="Model.Matricula.Id" />
                     }
                     else
                     {
                     <partial name="_BotonesCrearYRegresar" />
                     }
                  </div>
               </div>
            </>
         </form>
      </div>
   </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}