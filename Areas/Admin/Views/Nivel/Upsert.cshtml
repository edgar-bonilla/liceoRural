@model LICEORURALJASMINEZB.Models.ViewModels.NIvelViewModels

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Nivel";
}
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row p-3 border-0">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
        @if (Model.Nivel.Id != 0)
        {
            // Actualizar
            titulo = "Actualizar Nivel";
            <input type="hidden" asp-for="Nivel.Id" />
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@titulo</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    Marca
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(c => c.Nivel.IdPeriodo, Model.PeriodoLista, "Seleccione",
                    new { @class = "form-control" })
                    <span asp-validation-for="Nivel.IdPeriodo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nivel.DescripcionNivel"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nivel.DescripcionNivel" class="form-control" />
                    <span asp-validation-for="Nivel.DescripcionNivel" class="text-danger"></span>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nivel.DescripcionTurno"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nivel.DescripcionTurno" class="form-control" />
                    <span asp-validation-for="Nivel.DescripcionTurno" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nivel.HoraInicio"></label>
                </div>
                <div class="col-8">
                    <input type="date" asp-for="Nivel.HoraInicio" class="form-control" />
                    <span asp-validation-for="Nivel.HoraInicio" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nivel.HoraFin"></label>
                </div>
                <div class="col-8">
                    <input type="date" asp-for="Nivel.HoraFin" class="form-control" />
                    <span asp-validation-for="Nivel.HoraFin" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nivel.Estado"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Nivel.Estado" class="form-control">
                        <option value=true>Activo</option>
                        <option value=false>Inactivo</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Nivel.Id != 0)
                    {
                        <partial name="_BotonesActualizarYRegresar" model="Model.Nivel.Id" />
                    }
                    else
                    {
                        <partial name="_BotonesCrearYRegresar" />
                    }
                </div>
            </div>

        </div>

    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}






